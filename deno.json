{
  "lint": {
    "files": {
      "exclude": ["*.generated.ts", "vendor/", "test.bak/"]
    }
  },
  "fmt": {
    "files": {
      "exclude": ["test/_output", "lock.json", "vendor/", "test.bak/"]
    }
  },
  "importMap": "import_map.json",
  "tasks": {
    "fmt": "deno fmt",
    "fmt-check": "deno fmt --check",
    "lint": "deno lint",
    "cache": "deno cache --no-config -r --lock=lock.json --lock-write deps.ts test.deps.ts",
    "vendor": "rm -rf vendor && deno vendor --no-config --lock=lock.json deps.ts test.deps.ts",
    "test": "deno test --no-remote --lock=lock.json --allow-read=. --allow-write=. -A",
    "test-cov": "deno test --no-remote --lock=lock.json --allow-read=. --allow-write=. -A --coverage=cov --doc",
    "cov": "deno coverage --no-remote cov",
    "lcov": "deno coverage --no-remote --lcov cov > cov.lcov",
    "compile": "deno compile --no-remote --lock=lock.json --allow-read=. --allow-write=. hello-gen.ts",
    "start": "deno run --no-remote --lock=lock.json --allow-read=. --allow-write=. hello-gen.ts"
  }
}
